<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
<!--        <Property name="logPath">/home/utomcat/logs</Property>-->
        <Property name="logPath">c:\logs</Property>
    </Properties>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{ABSOLUTE} &lt;%c&gt; %5p [%t]: %m%n"/>
        </Console>

        <RollingRandomAccessFile name="SERVICE_LOG_FILE" fileName="${logPath}/isv.service.log"
                                 filePattern="${logPath}/$${date:yyyy-MM}/isv.service-%d{yyyy-MM-dd}-%i.log.gz">
            <!-- <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY" /> -->
            <PatternLayout pattern="%d{ABSOLUTE} &lt;%c&gt; %5p [%t]: %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy/>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="JOB_LOG_FILE" fileName="${logPath}/isv.boot.log"
                                 filePattern="${sys:user.home}/$${date:yyyy-MM}/logs/isv.boot-%d{yyyy-MM-dd}-%i.log.gz">
            <!-- <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY" /> -->
            <PatternLayout pattern="%d{ABSOLUTE} &lt;%c&gt; %5p [%t]: %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy/>
        </RollingRandomAccessFile>

        <RollingFile name="RollingFileWarn" fileName="${logPath}/isv.warn.log"
                     filePattern="${logPath}/$${date:yyyy-MM}/isv.warn-%d{yyyy-MM-dd}-%i.log">
            <ThresholdFilter level="warn" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="[%d{HH:mm:ss:SSS}] [%p] - %l - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="8 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="100"/>
        </RollingFile>
        <RollingFile name="RollingFileError" fileName="${logPath}/isv.error.log"
                     filePattern="${logPath}/$${date:yyyy-MM}/isv.error-%d{yyyy-MM-dd}-%i.log">
            <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="[%d{HH:mm:ss:SSS}] [%p] - %l - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="8 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="100"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <!-- Root Logger -->
        <Root level="INFO">
            <AppenderRef ref="STDOUT"/>
            <!--<AppenderRef ref="SERVICE_LOG_FILE"/>-->
            <!--<AppenderRef ref="JOB_LOG_FILE"/>-->
        </Root>

        <Logger name="om.maile360" level="INFO" additivity="false">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="SERVICE_LOG_FILE"/>
        </Logger>

        <!-- Quartz Logger -->
        <!--<Logger name="org.quartz" level="INFO" additivity="false">-->
            <!--<AppenderRef ref="STDOUT"/>-->
            <!--<AppenderRef ref="JOB_LOG_FILE"/>-->
        <!--</Logger>-->

        <!-- - - - - - - - BEGIN: DAO LOGGERS - - - - - - - -->
        <!--<Logger name="crm.open.isv.model" level="TRACE" additivity="false">-->
            <!--<AppenderRef ref="STDOUT"/>-->
            <!--<AppenderRef ref="SERVICE_LOG_FILE"/>-->
        <!--</Logger>-->
        <Logger name="biz.dal.mapper.original" level="TRACE" additivity="false">
            <AppenderRef ref="STDOUT"/>
            <!--<AppenderRef ref="SERVICE_LOG_FILE"/>-->
        </Logger>
            <Logger name="biz.dal.mapper.extend" level="TRACE" additivity="false">
            <AppenderRef ref="STDOUT"/>
            <!--<AppenderRef ref="SERVICE_LOG_FILE"/>-->
        </Logger>
        <!-- - - - - - - - END: DAO LOGGERS - - - - - - - -->
    </Loggers>
</Configuration>